<%= form_for(@task) do |t| %>
<table>
<tr>
    <th><%= t.label :desc %></th>
    <td><%= t.text_field :desc %></td></tr>

    <tr><td><%= t.label :priority %></td>
    <td><%= t.select :priority, options_for_select([["Low","low"],["Medium","medium"],["High","high"]])%></td></tr>

    <tr><td><%= t.label :deadline %></td>
    <!-- <%= t.datetime_select :deadline %> -->
    <td><%= Time.use_zone("Chennai") do
    t.datetime_select :deadline
  end %></td></tr>
 
    <tr><td><%= t.label :reminder %></td>
  <!--  <%= t.datetime_select :reminder %> -->
   <td><%= t.select :reminder, options_for_select([[5,5],[10,10],[15,15],[20,20],[25,25],[30,30],[45,45]])%></td></tr>
 
